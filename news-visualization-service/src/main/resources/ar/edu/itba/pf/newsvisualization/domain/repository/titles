{
    "from" : $offset$, "size" : $limit$,
    "query": {
        "filtered": {
            "query": {
                "range" : {
                    "fecha" : {
                        "gte" : "$from$",
                        "lt" :  "$to$||+1d",
                        "format": "yyyy-MM-dd"
                    }
                }
            }
            $if(keywords)$
            ,
            "filter" : {
                "and": [
                    { "or": [
                            $trunc(keywords):{k |
                                $\u007B$ "match": $\u007B$ "title": "$k$" $\u007D$ $\u007D$,
                                $\u007B$ "match": $\u007B$ "summary": "$k$" $\u007D$ $\u007D$,
                            }$
                            $last(keywords):{k |
                                $\u007B$ "match": $\u007B$ "title": "$k$" $\u007D$ $\u007D$,
                                $\u007B$ "match": $\u007B$ "summary": "$k$" $\u007D$ $\u007D$
                            }$
                        ]}
                ]
            }
            $endif$
        }
    }
}