{
  "query": {
    "filtered": {
        "query": {
            "range": {
              "fecha": {
                "gte": "$from$",
                "lte": "$to$||+1d",
                "format": "yyyy-MM-dd"
              }
            }
        }
        $if(medios)$
          ,"filter": {
              "terms" : {
                  "medio_id" : [
                    $trunc(medios):{k | "$k$", }$
                    $last(medios):{k | "$k$" }$
                  ]
              }
          }
        $endif$
    }
  },
  "aggs": {
    "dayOfWeek": {
      "aggs": {
        "titles": {
          "terms": {
            "field": "_all",
            "include": [
              $trunc(keywords):{k | "$k$", }$
              $last(keywords):{k | "$k$" }$
            ],
            "size": 2000
          }
        }
      },
      "date_histogram": {
        "field": "fecha",
        "interval": "day"
      }
    }
  }
}